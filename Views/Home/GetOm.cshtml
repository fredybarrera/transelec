@{
    ViewData["Title"] = $"OM: {ViewBag.Om}";
}

<div class="card mt-3">
    <div class="card-header card-header h4 text-center">
        OM @ViewBag.Om
    </div>
    <div class="card-body">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="recordsTableIndex" class="table table-striped table-bordered" style="width:100%">
                        <thead>
                            <tr>
                                @* 
                                <th>Object ID</th>
                                <th>uniquerowid</th>
                                <th>Global ID</th> 
                                <th>OM</th>
                                *@
                                <th>Actividad</th>
                                <th>Tipo de Trabajo</th>
                                <th>Equipo</th>
                                <th>Zona</th>
                                <th>Instalación</th>
                                <th>Organización</th>
                                <th>Jefe faena</th>
                                <th>Jefe de actividad</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    @*    
                                    <td>@item["objectid"]</td>
                                    <td>@item["uniquerowid"]</td>
                                    <td>@item["globalid"]</td> 
                                    <td>@item["om_text"]</td>
                                    *@
                                    <td>@item["actividad"]</td>
                                    <td>@item["tipo_trabaj"]</td>
                                    <td>@item["equipo"]</td>
                                    <td>@item["zona_name"]</td>
                                    <td>@item["instalac"]</td>
                                    <td>@item["organizac"]</td>
                                    <td>@item["jefe_faen"]</td>
                                    <td>@item["jefe_act"]</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer">
                <div class="form-group mt-2 mb-2" style="float: right;">
                    <button type="submit" class="btn btn-secondary"><em class="ion ion-ios-close-circle"></em>&nbsp; Rechazar</button>
                    <button type="submit" class="btn btn-success"><em class="ion ion-ios-checkmark-circle"></em>&nbsp; Aprobar</button>
                </div>
            </div>
        </div>
    </div>
</div>
